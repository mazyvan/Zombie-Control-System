<br>
<div class="row container">
  <%= link_to 'Edit', edit_zombie_path(@zombie) %> |
  <%= link_to 'Back', zombies_path %>
  <p id="notice"><%= notice %></p>

  <div class="col l6 s12">
    <div class="container">
      <%= image_tag(@zombie.avatar_url.to_s, class: "avatar-in-show") %>
    </div>
  </div>

  <div class="col l6 s12">
    <p>
      <strong>Name:</strong>
      <%= @zombie.name %>
    </p>

    <p>
      <strong>Bio:</strong>
      <%= @zombie.bio %>
    </p>

    <p>
      <strong>Age:</strong>
      <%= @zombie.age %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @zombie.email %>
    </p>

    <p>
      <strong>Rotten:</strong>
      <%= @zombie.rotten %>
    </p>
  </div>
</div>