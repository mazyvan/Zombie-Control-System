<h3>Profile</h3>
<br>
<div class="row container">
  <%= link_to 'Edit', edit_zombie_path(@zombie) %> |
  <%= link_to 'Back', zombies_path %>

  <div class="col l6 s12">
    <div class="container">
      <%= image_tag(@zombie.avatar_url.to_s, class: "avatar-in-show") %>
    </div>
  </div>

  <div class="col l6 s12">
    <p>
      <strong>Name:</strong>
      <%= @zombie.name %>
    </p>

    <p>
      <strong>Bio:</strong>
      <%= @zombie.bio %>
    </p>

    <p>
      <strong>Age:</strong>
      <%= @zombie.age %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @zombie.email %>
    </p>

    <p>
      <strong>Rotten:</strong>
      <%= @zombie.rotten %>
    </p>
  </div>

  <div class="col l12 s12">
    <br><br><br>
    <h4>Brains</h4>
    <div id="brains">
      <table>
        <thead>
          <tr>
            <th>Flavor</th>
            <th>Iq</th>
            <th>Fresh</th>
            <th>Created since</th>
          </tr>
        </thead>

        <tbody>
          <%= render :partial => @zombie.brains.reverse %>
        </tbody>
      </table>
    </div>
    <br><br><br>
    <h5>Add new brain</h5>
    <br>
    <%= form_for([@zombie, Brain.new], remote:true) do |f| %>
      <div class="field">
        <%= f.label :Flavor %>
        <%= f.text_field :flavor %>
      </div>
      <div class="field">
        <%= f.label :IQ %>
        <%= f.number_field :iq %>
      </div>
      <div class="field">
        <input id="brain_fresh" type="checkbox" class="filled-in" checked="checked" name="brain[fresh]"/>
        <label for="brain_fresh">Fresh</label>
      </div>
      <div class="actions">
        <%= f.submit "Add brain", class: 'waves-effect waves-light btn blue' %>
      </div>
    <% end %>
  </div>

</div>