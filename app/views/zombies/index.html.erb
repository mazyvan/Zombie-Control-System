<p id="notice"><%= notice %></p>

<h1>Zombies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Age</th>
      <th>Email</th>
      <th>Rotten</th>
      <th> </th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @zombies.each do |zombie| %>
      <tr>
        <td><%= zombie.name %></td>
        <td><%= zombie.bio %></td>
        <td><%= zombie.age %></td>
        <td><%= zombie.email %></td>
        <td><%= zombie.rotten ? "yepy" : "nopi" %></td>
        <td> </td>
        <td><%= link_to 'Show', zombie, class: 'waves-effect waves-light btn green' %></td>
        <td><%= link_to 'Edit', edit_zombie_path(zombie), class: 'waves-effect waves-light btn amber' %></td>
        <td><%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<%= link_to 'New Zombie', new_zombie_path, class: 'waves-effect waves-light btn blue' %>
