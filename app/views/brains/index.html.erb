<p id="notice"><%= notice %></p>

<h1>Brains</h1>

<table class="">
  <thead>
    <tr>
      <th>Flavor</th>
        <th>Iq</th>
        <th>Fresh</th>
        <th> </th>
      <th colspan="3">Options</th>
    </tr>
      
  </thead>

  <tbody>
    <% @brains.each do |brain| %>
      <tr>
        <td><%= brain.flavor %></td>
        <td><%= brain.iq %></td>
        <td>
          <% if brain.fresh %>
            <%= image_tag 'brains/brain.png', class: 'brain-image' %>
          <% else %>
            <%= image_tag 'brains/brain_filled.png', class: 'brain-image' %>
          <% end %>
        </td>
        <td> </td>
        <td><%= link_to 'Show', brain, class: 'waves-effect waves-light btn green' %></td>
        <td><%= link_to 'Edit', edit_brain_path(brain), class: 'waves-effect waves-light btn amber' %></td>
        <td><%= link_to 'Destroy', brain, method: :delete, data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brain', new_brain_path, class: 'waves-effect waves-light btn blue' %>
